<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VideoRangeSeekBar">
        <attr name="gradientWidth" format="dimension" />
        <attr name="thumbBandHeight" format="dimension" />
        <attr name="thumbWidth" format="dimension" />
        <attr name="indicatorWidth" format="dimension" />
        
        <attr name="leftThumbNormal" format="reference" />
        <attr name="leftThumbPress" format="reference" />
        <attr name="rightThumbNormal" format="reference" />
        <attr name="rightThumbPress" format="reference" />
        <attr name="leftGradient" format="reference" />
        <attr name="rightGradient" format="reference" />
        <attr name="videoClipMask" format="reference" />
        <attr name="indicatorImage" format="reference" />
    </declare-styleable>
    
    
    <!-- Defines the custom XML attributes supported for a HorizontalListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <declare-styleable name="ColorFulSeekbar">
        <attr name="cThumbTint" format="reference" />
        <attr name="cProgressTint" format="color|reference" />
        <attr name="cBackground" format="color|reference" />
        <attr name="cMaxHeight" format="dimension" />
        <attr name="cMinHeight" format="dimension" />
        <attr name="cMaxWidth" format="dimension" />
        <attr name="cMinWidth" format="dimension" />
        <attr name="cMax" format="integer" />
        <attr name="cProgress" format="integer" />
    </declare-styleable>
    <declare-styleable name="ColorSeekbar">
        <attr name="ColorMaxHeight" format="dimension" />
        <attr name="ColorMinHeight" format="dimension" />
        <attr name="ColorBackground" format="color|reference" />
    </declare-styleable>

    <array name="paint_colors">
        <item>#FFFFFF</item>
        <item>#000000</item>
        <item>#01ADD9</item>
        <item>#53DA3E</item>
        <item>#FFEF02</item>
        <item>#FF6D00</item>
        <item>#E72E45</item>
        <item>#BC34BA</item>
    </array>
</resources>
